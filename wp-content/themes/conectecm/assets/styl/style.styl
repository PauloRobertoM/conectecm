---
--- #header
---
-------------*/

#header
   position relative
   box-shadow 0 0 5px #ccc
   -webkit-box-shadow 0 0 5px #ccc
   -moz-box-shadow 0 0 5px #ccc


/*-------------
---
--- #clientes
---
-------------*/

#clientes
   margin-top 100px
   
#clientes_content
   margin-top 50px

#clientes_content .cliente
   display block
   position relative
   padding 0
   margin 0 15px
   text-align center
   
.clientes
   padding 0 50px
   //margin 0 -50px
   position relative
   .cliente
      .pb
         height 150px
         line-height 150px
         position relative
      &:hover .cor
         opacity 1
         transition opacity 0.7s
         -webkit-transition opacity 0.7s
         -moz-transition opacity 0.7s
      .cor
         height 150px
         width 100%
         line-height 150px
         position absolute
         top 0
         opacity 0
         transition opacity 0.7s
         -webkit-transition opacity 0.7s
         -moz-transition opacity 0.7s

.clientes .prev,
.clientes .next
   position absolute
   top 50%
   margin-top -19px
   font-size 38px
   line-height 1
   color #999
   cursor pointer
   &:hover
      color color_orange

.clientes .prev
   left 0
   
.clientes .next
   right 0

