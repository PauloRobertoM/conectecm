.link_web
  padding-left 20px
  background-image url("../../imgs/conecte/icones/002.png")
  background-repeat no-repeat
  background-position center left

#share_icones a
  display inline-block
  font-size 32px
  margin 0 5px
  text-decoration none
  &:hover
    color #333

.icones
  &:before
    content ""
