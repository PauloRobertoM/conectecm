  &.ecommerce:before
    background-image url(../../imgs/conecte/icone_ecommerce.png) !important

.feature-box:hover
  .icones:before
    background-position 0 -50px
    

@-webkit-keyframes sonarEffect {
    0% {
        opacity: 0.3;
    }
    40% {
        opacity: 0.5;
        -webkit-box-shadow: 0 0 0 2px rgba(249, 164, 53, 0.1), 0 0 10px 10px orange, 0 0 0 10px rgba(249, 164, 53, 0.5);
        box-shadow: 0 0 0 2px rgba(249, 164, 53, 0.1), 0 0 10px 10px orange, 0 0 0 10px rgba(249, 164, 53, 0.5);
    }
    100% {
        -webkit-box-shadow: 0 0 0 2px rgba(249, 164, 53, 0.1), 0 0 10px 10px rgb(249, 164, 53), 0 0 0 10px rgba(249, 164, 53, 0.5);
        box-shadow: 0 0 0 2px rgba(249, 164, 53, 0.1), 0 0 10px 10px rgb(249, 164, 53), 0 0 0 10px rgba(249, 164, 53, 0.5);
        -webkit-transform: scale(1.5);
        opacity: 0;
    }
}
@-o-keyframes sonarEffect {
    0% {
        opacity: 0.3;
    }
    40% {
        opacity: 0.5;
        box-shadow: 0 0 0 2px rgba(249, 164, 53, 0.1), 0 0 10px 10px rgb(249, 164, 53), 0 0 0 10px rgba(249, 164, 53, 0.5);
    }
    100% {
        box-shadow: 0 0 0 2px rgba(249, 164, 53, 0.1), 0 0 10px 10px rgb(249, 164, 53), 0 0 0 10px rgba(249, 164, 53, 0.5);
        -o-transform: scale(1.5);
        transform: scale(1.5);
        opacity: 0;
    }
}
@keyframes sonarEffect {
    0% {
        opacity: 0.3;
    }
    40% {
        opacity: 0.5;
        -webkit-box-shadow: 0 0 0 2px rgba(249, 164, 53, 0.1), 0 0 10px 10px rgb(249, 164, 53), 0 0 0 10px rgba(249, 164, 53, 0.5);
        box-shadow: 0 0 0 2px rgba(249, 164, 53, 0.1), 0 0 10px 10px rgb(249, 164, 53), 0 0 0 10px rgba(249, 164, 53, 0.5);
    }
    100% {
        -webkit-box-shadow: 0 0 0 2px rgba(249, 164, 53, 0.1), 0 0 10px 10px rgb(249, 164, 53), 0 0 0 10px rgba(249, 164, 53, 0.5);
        box-shadow: 0 0 0 2px rgba(249, 164, 53, 0.1), 0 0 10px 10px rgb(249, 164, 53), 0 0 0 10px rgba(249, 164, 53, 0.5);
        -webkit-transform: scale(1.5);
        -o-transform: scale(1.5);
        transform: scale(1.5);
        opacity: 0;
    }
}

