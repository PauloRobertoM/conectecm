@media (max-width: 970px)
   /*-------------
   ---
   --- #header
   ---
   -------------*/
   .header_logo
      text-align center
      padding 30px 0
      
   .header_logo a
      display inline-block
      img.logo_normal
         display none
      
   .header_menu
      display none
      margin-bottom 30px

   .header_menu ul
      margin 0
      padding 0
      list-style none
      line-height 1

   .header_menu ul li
      margin-bottom 1px

   .header_menu ul li:last-child
      margin-bottom 0

   .header_menu ul li a
      font-family 'montserratbold'
      padding 20px
      display block
      text-transform uppercase
      color #333
      &:hover, &.ativo
         background-color color_orange
         color white
         text-decoration none
         
   #botao_m
      display block
      font-size 32px
      line-height 1
      position absolute
      right 30px
      top 45px
      cursor pointer
      &:hover, &.ativo
         color color_orange
         
   .flexslider
      margin 0
         
   /*-------------
   ---
   --- #contato
   ---
   -------------*/
         
   #contato_form
      padding 0
      
   #top
      display none
      

   .only_desktop
      display none !important
   
   /*-------------
   ---
   --- portf√≥lio
   ---
   -------------*/
   .desc-single-portfolio-content,
   .img-single-portfolio-content
      padding 0 15px
   
      
@media (min-width: 970px)
   /*-------------
   ---
   --- #header
   ---
   -------------*/
   
   #header.home
      position absolute
      z-index 20
      width 100%
      background-color white

   .header_logo a
      display inline-block
      margin-top 12px
      img.logo_fixo
         display none

   .header_menu
      text-align right
      line-height 0

   .header_menu ul
      display inline-block
      margin 0
      padding 0
      list-style none
      line-height 1

   .header_menu ul li
      display inline-block
      float left

   .header_menu ul li a
      font-family 'montserratbold'
      display block
      padding 40px 20px
      text-transform uppercase
      color #333
      &:hover, &.ativo
         background-color color_orange
         color white
         text-decoration none
      &:focus
         text-decoration none
         
   #header.fixo
      position fixed
      z-index 12
      background white
      width 100%
      .header_logo
         a
            margin 0
            img.logo_fixo
               display inline-block
            img.logo_normal
               display none
      .header_menu ul li a
         padding 25px 15px
         
   #botao_m
      display none